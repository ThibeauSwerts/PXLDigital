<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="Euros and cents" Height="450" Width="800">
    <Grid>
        <!--toetsen combinatie alt + c de c in label onderlijnen en cusor gepositioneerd op het textvak-->
        <Button Content="Calculate" HorizontalAlignment="Left" Height="36" Margin="130,186,0,0" VerticalAlignment="Top" Width="132" Click="Button_Click"/>
        <TextBox Name="inputTextBox" HorizontalAlignment="Left" Height="21" Margin="130,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        <Label Content="Input cents" Target="{Binding ElementName=inputTextBox}" HorizontalAlignment="Left" Height="31" Margin="130,139,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBlock Name="outputTextBlockEuro" Background="LightBlue" HorizontalAlignment="Left" Height="21" Margin="334,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <TextBlock Name="outputTextBlockWritten" Background="LightBlue" HorizontalAlignment="Left" Height="21" Margin="334,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>

    </Grid>
</Window>
