<Window x:Class="Example2Array1dim.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example2Array1dim"
        mc:Ignorable="d"
        Title="InputWindow" Height="100" Width="280" Closing="Window_Closing">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="18,20,0,0"
                   Text="index:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="58,20,0,0"
                 VerticalAlignment="Top" Width="50" Name="indexTextBox"/>
        <TextBlock HorizontalAlignment="Left" Margin="138,20,0,0"
        	Text="value:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="178,20,0,0"
        	VerticalAlignment="Top" Width="50" Name="valueTextBox"/>

    </Grid>
</Window>
