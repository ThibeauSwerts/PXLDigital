<Window x:Class="Opdracht9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opdracht9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Name="openItem" Click="openItem_Click"/>
                <MenuItem Header="Rewrite" IsEnabled="False" Name="rewriteItem" Click="rewriteItem_Click"/>
                <MenuItem Header="Append" IsEnabled="False" Name="appendItem" Click="appendItem_Click"/>
                <Separator />
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="257*"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="outputTextBox" Background="LemonChiffon" HorizontalAlignment="Left" Height="281" Margin="117.648,68,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="484" Grid.Column="1"/>

        </Grid>
    </DockPanel>
</Window>
